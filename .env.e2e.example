# Base URL to run E2E tests against
# - Local (default via playwright.config.js): http://127.0.0.1:4173
# - Production: https://your-domain.com
E2E_BASE_URL=http://127.0.0.1:4173

# If you are running against an already-started server (or production), disable Playwright webServer startup:
# E2E_NO_WEB_SERVER=1

# Required user credentials for core flows
E2E_USER_EMAIL=
E2E_USER_PASSWORD=

# Optional role-based accounts (tests will auto-skip if not set)
E2E_VENDOR_EMAIL=
E2E_VENDOR_PASSWORD=

E2E_STAFF_EMAIL=
E2E_STAFF_PASSWORD=

E2E_HOST_EMAIL=
E2E_HOST_PASSWORD=
